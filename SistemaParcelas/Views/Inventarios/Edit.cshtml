@model SistemaParcelas.Models.Inventario

@{
    ViewData["Title"] = "Editar elemento";
}

<h1>Editar</h1>

<h4>Elemento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdInventario" />
            <div class="form-group">
                <label asp-for="IdParcela" class="control-label"></label>
                <select asp-for="IdParcela" class="form-control" asp-items="ViewBag.IdParcela"></select>
                <span asp-validation-for="IdParcela" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoCafe" class="control-label"></label>
                <input asp-for="TipoCafe" class="form-control" />
                <span asp-validation-for="TipoCafe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadCafeDisponible" class="control-label"></label>
                <input asp-for="CantidadCafeDisponible" class="form-control" />
                <span asp-validation-for="CantidadCafeDisponible" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CalidadCafe" class="control-label"></label>
                <input asp-for="CalidadCafe" class="form-control" />
                <span asp-validation-for="CalidadCafe" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:10px;margin-bottom:10px;">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-warning" asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
