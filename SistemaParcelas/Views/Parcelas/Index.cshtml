@model IEnumerable<SistemaParcelas.Models.Parcela>

@{
    ViewData["Title"] = "Index";
}

<h1>Administración de Parcelas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear una parcela nueva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CoordenadasGps)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VariedadCafe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetodoCultivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuperficieParcela)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CoordenadasGps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VariedadCafe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetodoCultivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SuperficieParcela)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdParcela">Editar</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdParcela">Detalles</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdParcela">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
